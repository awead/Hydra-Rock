<% if current_user %>
  <% #removed can_be_superuser functions %>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <i class="icon-user"></i> <%= current_user.to_s %> <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Account", edit_user_registration_path %></li>
      <li><%= link_to 'Bookmarks', bookmarks_path %></li>
      <li><%= link_to "Saved Searches", saved_searches_path %></li>
      <li class="divider"></li>
      <li><%= link_to "Sign Out", destroy_user_session_path %></li>
    </ul>
  </li>

<% else %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <i class="icon-user"></i> Sign In <b class="caret"></b>
    </a>
    <ul class="dropdown-menu navbar-serach" style="padding: 15px; padding-bottom: 0px;">
      <%= form_for("user", :url => user_session_path, :html=>{:class=>"form-inline"}) do |f| %>
        <%= f.text_field :email, {:placeholder => "Email"} %>
        <%= f.password_field :password, {:placeholder => "Password"} %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %><br/>
        <%= f.submit 'Sign in', {:class => "btn btn-primary span3"} %>
        <%= link_to "Forgot your password?", new_password_path('user') %>
      <% end %>
    </ul>
  </li>
<% end %>