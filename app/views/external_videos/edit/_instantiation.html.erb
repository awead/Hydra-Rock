<%= form_for @afdoc, :url => external_video_path, :html => {:class => 'form-vertical document_edit'} do |f| %>

  <fieldset id="instantiation_fields">
    <legend>Fields you can edit</legend>
    <dl>
      <%= f.label :rights_summary, :class=>"field" %>
      <%= render :partial => "shared/edit/field", :locals => { :t=>"rights_summary", :f=>f, :vals=>@afdoc.rights_summary, :multiple=>FALSE } %>
      <%= f.label :note, :class=>"field" %>
      <%= render :partial => "shared/edit/field", :locals => { :t=>"note", :f=>f, :vals=>@afdoc.note, :multiple=>TRUE } %>
    </dl>
  </fieldset>
  <%= f.submit "Save Changes", :class => "btn-primary btn-large" %>
<% end %>