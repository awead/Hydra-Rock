<%= form_for @afdoc, :url => archival_video_path, :html => {:class => 'form-vertical document_edit'} do |f| %>

 <fieldset id="groups">
    <legend>Group Permissions</legend>
    <p>
      Grant permissions to this object via groups. Any user that is a memeber of the group will automatically
      have the access rights specified below.
    </p>
    <% RoleMapper.role_names.each do |role| %>
      <%= f.label role %>
      <%= select_tag "document_fields[permissions][groups][#{role}]", options_for_select(permisison_choices, get_access_for_role(role) ) %>
    <% end %>
  </fieldset>

  <fieldset id="individuals">
    <legend>Individual Permissions</legend>
    <p>Grant permissions to this object for a specific user, regardless of his or her group memebership.</p>
    <% user_permissions.each do |user, access| %>
      <%= user %>
      <%= select_tag "document_fields[permissions][users][#{user}]", options_for_select(permisison_choices, access ) %>
    <% end %>
  </fieldset>

  <%= hidden_field_tag(:wf_step, params[:wf_step]) %>
  <%= f.submit "Save Changes", :class => "btn btn-primary" %>

<% end %>