<div class="document_viewer" id="cover_container">

    <% if @document_fedora.file_objects.count > 0 %>
      <h2 id="video" class="section-title">Video</h2>
      <%= render_video_player %>
    <% end %>

    <h2 id="content" class="section-title">Content</h2>
    <%= render :partial => "digital_videos/show/document", :locals => {:content_type => "digital_video"} %>

    <h2 id="rockhall" class="section-title">Rockhall</h2>
    <%= render :partial => "shared/show/rockhall", :locals => {:content_type => "digital_video"} %>

    <h2 id="rockhall" class="section-title">Review Information</h2>
    <%= render :partial => "shared/show/review", :locals => {:content_type => "digital_video"} %>

    <% if @document_fedora.file_objects.count > 0 %>
      <h2 id="files" class="section-title">Files</h2>
      <%= render :partial => "shared/show/all", :locals => {:content_type => "digital_video"} %>
    <% end %>

</div>