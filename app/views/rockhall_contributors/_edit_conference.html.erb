<% conference = edit_conference %>
<% conference_counter = edit_conference_counter %>
<% conference_name = get_values_from_datastream(@document_fedora,'descMetadata', [:mods, {:conference=>conference_counter}, :namePart]).first %>
<% base_id = "conference_#{conference_counter}" %>
<% if @document_fedora.class.respond_to?(:conference_relator_terms) %>
  <% choices = @document_fedora.class.conference_relator_terms %>
<% else %>
  <% choices = Hydra::ModsArticle.dc_relator_terms %>
<% end %>

<% if RAILS_ENV == "development" %>
  node: <%= conference %> <br/>
  counter: <%= conference_counter %> </br/>
<% end %>

<li>
  <dl class="conference contributor" id="<%= base_id %>">
    <dt>
      <%= fedora_field_label("descMetadata", [:mods, {:conference => conference_counter}, :role, :text], "Role:") %>
      <%= fedora_select(@document_fedora,"descMetadata", [:mods, {:conference => conference_counter}, :role, :text], :choices=>choices.values.sort) %>
    </dt>
    <dd class="multi_inline conference">
      <ul>
        <li>
          <%= fedora_field_label("descMetadata", [:mods, {:conference => conference_counter}, :namePart], "Conference:") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:mods, {:conference => conference_counter}, :namePart], :multiple=>false) %>
        </li>
      </ul>
      <% if (params[:action] == "edit" && !conference_name.empty?) %>
        <%= field_selectors_for("descMetadata", [{:person=>conference_counter}]) %>
        <!-- Need to find an automatic way of getting content_type -->
        <a class="destructive destroy_contributor" href="<%= asset_contributor_path(@document_fedora.pid, "conference", conference_counter, { :content_type => "archival_image" } ) %>" title="Delete '<%= conference_name %>"> Delete</a>
      <% end %>
    </dd>
  </dl>
</li>
