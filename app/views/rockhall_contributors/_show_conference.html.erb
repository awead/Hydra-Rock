<% conference = show_conference %>
<% conference_counter = show_conference_counter %>
<% conference_name = get_values_from_datastream(@document_fedora,'descMetadata', [:mods, {:conference=>conference_counter}, :namePart]).first %>
<% base_id = "conference_#{conference_counter}" %>
<% unless get_values_from_datastream(@document_fedora,"descMetadata", [:mods, {:conference => conference_counter}, :namePart]).first.empty? %>
  <dl class="conference contributor" id="<%= base_id %>">
    <dt>
      <%= fedora_field_label("descMetadata", [:mods, {:conference => conference_counter}, :role, :text], "conference's Role:") %>
      <%= get_values_from_datastream(@document_fedora,"descMetadata", [:mods, {:conference => conference_counter}, :role, :text]) %>
    </dt>
    <dd class="multi_inline conference">
      <ul>
        <li>
          <%= fedora_field_label("descMetadata", [:mods, {:conference => conference_counter}, :namePart], "Conference:") %>
          <%= get_values_from_datastream(@document_fedora,"descMetadata", [:mods, {:conference => conference_counter}, :namePart]) %>
        </li>
      </ul>
    </dd>
  </dl>
<% end %>
