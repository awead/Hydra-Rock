<dl>
  <fieldset id="properties">
    <legend>Properties</legend>
    <dl>
    
      <% unless get_values_from_datastream(@document_fedora,"properties", [:notes]).first.empty? %>
      <dt>
        <%= fedora_field_label("properties", :notes, "Notes") %>
      </dt>
      <dd id="topic_tag" class="notes">
        <%= get_values_from_datastream(@document_fedora, "properties", [:notes], :multiple=>true) %>
      </dd>
      <% end %>
      
      <% unless get_values_from_datastream(@document_fedora,"properties", [:access]).first.empty? %>
      <dt>
        <%= fedora_field_label("properties", :access, "Access Restrictions") %>
      </dt>
      <dd class="access">
        <%= get_values_from_datastream(@document_fedora, "properties", [:access], :multiple=>false) %>
      </dd>
      <% end %>
      
    </dl>
  </fieldset>
</dl>
