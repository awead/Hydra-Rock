<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"assets", :content_type=>"archival_image")%>" method="post" data-resourceType="archival_image" accept-charset="utf-8">
  <fieldset id="properties">
    <legend>Properties</legend>
    <input id="content_type" type="hidden" name="content_type" value="archival_image" />
    <dl>
      <dt>
        <%= fedora_field_label("properties", :notes, "Notes") %>
        <%= fedora_text_field_insert_link "properties", [:notes] %>
      </dt>
      <dd class="notes">
        <%= fedora_text_field(@document_fedora, "properties", [:notes], :multiple=>true) %>
      </dd>
      <dt>
        <%= fedora_field_label("properties", :access, "Access Restrictions") %>
      </dt>
      <dd class="access">
        <%= fedora_text_field(@document_fedora, "properties", [:access], :multiple=>false) %>
      </dd>
    </dl>
  </fieldset>
</form>


