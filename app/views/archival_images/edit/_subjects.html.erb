<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"assets", :content_type=>content_type)%>" method="post" data-resourceType="<%= content_type %>" accept-charset="utf-8">
  <fieldset id="subject_fields">
    <legend>Subject Fields</legend>
    <%# Buttons for adding rockhall subjects %>
    <% if params[:action] == "edit" %>
      <% format = document_partial_name(@document) %>
      <div id="add-rh-subject-box">
        <input id="add-rh-subject-action" type="button" value="Add personal" />
        <input id="add-rh-subject-action" type="button" value="Add corporate" />
        <input id="add-rh-subject-action" type="button" value="Add conference" />
        <input id="add-rh-subject-action" type="button" value="Add title_info" />
        <input id="add-rh-subject-action" type="button" value="Add topic" />
        <input id="add-rh-subject-action" type="button" value="Add geographic" />
      </div>
    <% end %>
    <ol id="rh-subjects-display">
      <%= render :partial=>"subjects/edit", :collection=>@document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:mods, :subject) %>
    </ol>
  </fieldset>
</form>
