<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"assets", :content_type=>content_type)%>" method="post" data-resourceType="<%= content_type %>" accept-charset="utf-8">

  <fieldset id="contributor_fields">
    <legend>Contributor Fields</legend>
    <%# Buttons for adding rockhall contributors %>
    <% if params[:action] == "edit" %>
      <% format = document_partial_name(@document) %>
      <div id="add-rh-contributor-box">
        <input id="add-rh-contributor-action" type="button" value="Add person" />
        <input id="add-rh-contributor-action" type="button" value="Add corporate" />
        <input id="add-rh-contributor-action" type="button" value="Add conference" />
      </div>
    <% end %>
    <ol id="rh-contributors-display">
      <%= render :partial=>"rockhall_contributors/edit_person", :collection=>@document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:mods, :person) %>
      <%= render :partial=>"rockhall_contributors/edit_corporate", :collection=>@document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:mods, :corporate) %>
      <%= render :partial=>"rockhall_contributors/edit_conference", :collection=>@document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:mods, :conference) %>
    </ol> 

  </fieldset>



</form>

