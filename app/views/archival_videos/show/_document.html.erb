<fieldset id="document_fields">

  <dl>
    <%= display_field([:main_title]) %>
    <%= display_field([:alternative_title], {:multiple=>true}) %>
    <%= display_field([:chapter], {:multiple=>true}) %>
    <%= display_field([:episode], {:multiple=>true}) %>
    <%= display_field([:label], {:multiple=>true}) %>
    <%= display_field([:segment], {:multiple=>true}) %>
    <%= display_field([:subtitle], {:multiple=>true}) %>
    <%= display_field([:track], {:multiple=>true}) %>
    <%= display_field([:translation], {:multiple=>true}) %>

    <%= display_field([:description]) %>
    <%= display_field([:contents]) %>
    <%= display_field([:subject], {:multiple=>true}) %>
    <%= display_field([:genre], {:multiple=>true}) %>
    <%= display_field([:series], {:inline=>true}) %>
    <%= display_field([:event_place]) %>
    <%= display_field([:event_time]) %>
    <%= display_field([:note], {:inline=>true}) %>

    <%= render :partial=>"pbcore/header", :locals => {:node=>"contributor"} %>
    <%= render :partial=>"pbcore/header", :locals => {:node=>"publisher"} %>



  </dl>
</fieldset>
