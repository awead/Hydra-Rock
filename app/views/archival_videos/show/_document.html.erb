<fieldset id="document_fields">

  <dl>
    <%= display_field([:full_title], { :name=>"Title" }) %>
    <%= display_field([:sub_title],  { :name=>"Subtitle", :inline=>true}) %>
    <%= display_field([:alt_title],  { :name=>"Alt. Title", :multiple=>true}) %>
    <%= display_field([:episode],    { :inline=>true}) %>
    <%= display_field([:series],     { :inline=>true}) %>

    <%= display_field([:language]) %>
    <%= display_field([:summary]) %>
    <%= display_field([:contents],          { :name=>"Table of Contents" }) %>
    <%= display_field([:coverage, :event],  { :name => "Event Location" }) %>
    <%= display_field([:coverage, :date],   { :name => "Event Date" }) %>
    <%= display_field([:note],              { :inline=>true }) %>
    <%= display_field([:caption]) %>

    <%= render :partial=>"pbcore/header", :locals => {:node=>"contributor"} %>
    <%= render :partial=>"pbcore/header", :locals => {:node=>"publisher"} %>
    <%= render :partial=>"pbcore/header", :locals => {:node=>"series"} %>

    <%= render :partial=>"archival_videos/show/subjects" %>

  </dl>
</fieldset>
