<fieldset id="title_fields">
  <legend>Titles</legend>
  <dl class="dl-horizontal">
    <%= display_field(:main_title) %>
    <%= display_field(:alternative_title) %>
    <%= display_field(:chapter) %>
    <%= display_field(:episode) %>
    <%= display_field(:label) %>
    <%= display_field(:segment) %>
    <%= display_field(:subtitle) %>
    <%= display_field(:track) %>
    <%= display_field(:translation) %>
  </dl>
</fieldset>

<fieldset id="description_fields">
  <legend>Description</legend>
  <dl class="dl-horizontal">
    <%= display_field(:summary) %>
    <%= display_field(:parts_list) %>
    <%= display_field(:subjects) %>
    <%= display_field(:genres) %>
    <%= display_field(:event_series) %>
    <%= display_field(:event_place) %>
    <%= display_field(:event_date) %>
    <%= display_field(:note) %>
  </dl>
</fieldset>

<fieldset id="person_fields">
  <legend>Persons</legend>
  <dl class="dl-horizontal">
    <%= render :partial=>"pbcore_nodes/show/contributors", :locals => {:document=>@afdoc} %>
    <%= render :partial=>"pbcore_nodes/show/publishers",   :locals => {:document=>@afdoc} %>
  </dl>
</fieldset>
