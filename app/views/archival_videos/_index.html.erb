<tr class="document" class="<%= cycle("even","odd") %>">
  <td>
    <%= image_tag("rockhall/video_icon.png", :size=>"50x50") %>
    <%= link_to_document(document, :label => Blacklight.config[:show][:heading].to_sym, :counter => (counter + 1 + @response.params[:start].to_i)) %>
  </td>
  <td>
    <%= (document[:format] || document_type(document)) %>
  </td>
  <td>
    <%= DateTime.parse(document[:system_create_dt]).in_time_zone("Eastern Time (US & Canada)").strftime("%c") %>
  </td>
  <td>
    <%= get_file_asset_count(document)%>
  </td>
</tr>
