<%= form_tag url_for(:action=>"update", :controller=>"assets", :content_type=>"archival_video"),
      :method             => "put",
      :id                 => "descMetadata",
      "data-resourceType" => "archival_video",
      "accept-charset"    => "utf-8" do %>

  <fieldset id="title_fields">
    <dl>
      <%= display_field([:creation_date]) %>
      <%= display_field([:barcode]) %>

      <dt>
        <label for="item_location">Repository</label>
      </dt>
      <dd class="field">
        <%= fedora_text_area(@document_fedora, "descMetadata", [:repository], :multiple=>FALSE) %>
      </dd>

      <%= display_field([:format]) %>
      <%= display_field([:standard]) %>
      <%= display_field([:media_type]) %>
      <%= display_field([:generation]) %>
      <%= display_field([:language]) %>
      <%= display_field([:colors]) %>
      <%= display_field([:archival_collection]) %>
      <%= display_field([:archival_series]) %>
      <%= display_field([:collection_number]) %>
      <%= display_field([:accession_number]) %>
      <%= display_field([:usage]) %>
      <%= display_field([:condition_note], {:inline=>TRUE}) %>
      <%= display_field([:cleaning_note], {:inline=>TRUE}) %>

    </dl>
  </fieldset>
  <% # This is a hack that makes Hydra redirect to the edit page after a save %>
  <%= hidden_field_tag(:wf_step, "foo") %>
  <%= submit_tag 'Save Original', {:id => "submitOriginal"} %>
<% end %>
