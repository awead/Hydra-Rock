<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"assets", :content_type=>content_type)%>" method="post" data-resourceType="<%= content_type %>" accept-charset="utf-8">
  <fieldset id="title_fields">
    <legend>Original Item</legend>
    <input id="content_type" type="hidden" name="<%= content_type %>" value="<%= content_type %>" />
    <dl>
      <%= display_field([:item, :carrier], { :name => "Carrier" }) %>
      <%= display_field([:item, :standard], { :name => "Standard" }) %>
      <%= display_field([:item, :barcode], { :name => "Barcode" }) %>
      <%= display_field([:item, :relation, :collection_name], { :name => "Collection Name" }) %>
      <%= display_field([:item, :relation, :collection_number], { :name => "Collection Number" }) %>
      <%= display_field([:item, :relation, :accession_number], { :name => "Accession Number" }) %>
      <%= display_field([:item, :note], { :name => "Note" }) %>
    </dl>
  </fieldset>
</form>
