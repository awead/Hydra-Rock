<%= form_tag url_for(:action=>"update", :controller=>"assets", :content_type=>"archival_video"),
      :method             => "put",
      :id                 => "properties",
      "data-resourceType" => "archival_video",
      "accept-charset"    => "utf-8" do %>

  <fieldset id="title_fields">
    <legend>Content</legend>
    <dl>
      <%= display_field([:full_title], { :name=>"Title" }) %>
      <%= display_field([:sub_title],  { :name=>"Subtitle", :multiple=>true}) %>
      <%= display_field([:alt_title],  { :name=>"Alt. Title", :multiple=>true}) %>
      <%= display_field([:episode],    { :multiple=>true}) %>
      <%= display_field([:series],     { :multiple=>true}) %>

      <%= display_field([:language]) %>
      <%= display_field([:summary]) %>
      <%= display_field([:contents],          { :name=>"Table of Contents" }) %>
      <%= display_field([:coverage, :event],  { :name => "Event Location" }) %>
      <%= display_field([:coverage, :date],   { :name => "Event Date" }) %>
      <%= display_field([:note],              { :multiple=>true }) %>
      <%= display_field([:caption]) %>

      <%= display_field([:entity], { :multiple=>true}) %>
      <%= display_field([:era],    { :multiple=>true}) %>
      <%= display_field([:place],  { :multiple=>true}) %>
      <%= display_field([:event],  { :multiple=>true}) %>

      <%= display_fieldset(:contributor, {:edit=>true}) %>
      <%= display_fieldset(:publisher,   {:edit=>true}) %>
      <%= display_fieldset(:genre,       {:edit=>true}) %>
      <%= display_fieldset(:topic,       {:edit=>true}) %>
    </dl>
  </fieldset>
  <%= submit_tag 'Save Document', {:id => "submitDocument"} %>
<% end %>

<!-- Buttons for inserting field sets -->
<% sidebar_items << capture do %>
  <% ["contributor","publisher","genre","topic"].each do |type| %>
    <%= form_tag url_for(:action=>"create", :asset_id=>@document[:id], :controller=>"pbcore", :content_type=>"archival_video", :node=>type) do %>
      <%= submit_tag "Add #{type}", {:id => "add#{type.capitalize}"} %>
    <% end %>
  <% end %>
<% end %>




