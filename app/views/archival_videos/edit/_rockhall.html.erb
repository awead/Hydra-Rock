<%= form_for @afdoc, :url => archival_video_path(:wf_step=>params[:wf_step]), :html => {:class => 'form-vertical document_edit'} do |f| %>

  <fieldset id="rockhall_fields">
    <legend>Rockhall Fields</legend>
    <%= f.label :notes, :class=>"field" %>
    <%= render :partial => "shared/edit/field", :locals => { :t=>"notes", :f=>f, :vals=>@afdoc.notes, :multiple=>TRUE } %>
  </fieldset>

  <%= hidden_field_tag(:wf_step, params[:wf_step]) %>
  <%= f.submit "Save Changes", :class => "btn-primary btn-large" %>

<% end %>