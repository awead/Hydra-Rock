<%= form_tag(url_for(:controller=>"assets", :action=>"update", :id=>params[:id]), :id=>"descriptive-metadata", :"data-resourceType"=>"archival_video", :"accept-charset"=>"utf-8") do -%>

  <%= hidden_field_tag("_method","put") %>

  <fieldset id="rockhall_fields">
    <legend>Rockhall Fields</legend>
    <%= display_field([:notes], { :datastream => "properties", :name => "Internal Notes", :multiple=>true, :required=>false }) %>
    <%= display_field([:submission], { :datastream => "properties", :name => "File Submissions", :multiple=>true, :required=>false }) %>
    <%= display_field([:access], { :datastream => "properties", :name => "Access Restrictions", :multiple=>false, :required=>false }) %>
  </fieldset>

  <%= hidden_field_tag(:wf_step, params[:wf_step]) %>
  <%= hidden_field_tag(:content_type,"archival_video") %>
  <%= submit_tag("Continue", :name=>"continue") %>

<% end %>