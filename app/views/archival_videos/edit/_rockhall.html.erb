<%= form_tag url_for(:action=>"update", :controller=>"assets", :content_type=>"archival_video"),
      :method             => "put",
      :id                 => "properties",
      "data-resourceType" => "archival_video",
      "accept-charset"    => "utf-8" do %>

  <fieldset id="properties">
    <dl>
      <%= display_field([:notes], { :datastream => "properties", :name => "Internal Notes", :multiple => TRUE }) %>
      <%= display_field([:depositor], { :datastream => "properties" }) %>
      <%= display_field([:submission], { :datastream => "properties", :multiple => TRUE }) %>
      <%= display_field([:access], { :datastream => "properties", :name => "Access Restrictions" }) %>
    </dl>
  </fieldset>
  <% # This is a hack that makes Hydra redirect to the edit page after a save %>
  <%= hidden_field_tag(:wf_step, "foo") %>
  <%= submit_tag 'Save Description', {:id => "submitDescription"} %>
<% end %>