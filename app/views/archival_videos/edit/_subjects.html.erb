<%= form_tag(url_for(:controller=>"assets", :action=>"update", :id=>params[:id]), :id=>"descriptive-metadata", :"data-resourceType"=>"archival_video", :"accept-charset"=>"utf-8") do -%>

  <%= hidden_field_tag("_method","put") %>

  <fieldset id="subjects">
    <legend>Subject Fields</legend>
    <%= display_field([:lc_subject], {:name=>"LCSH Topic", :multiple=>true, :required=>false}) %>
  </fieldset>

  <fieldset id="genres">
    <legend>Genre Fields</legend>
    <%= display_field([:lc_genre], {:name=>"LCGFT", :multiple=>true, :required=>false}) %>
  </fieldset>

  <fieldset id="event_fields">
    <legend>Event Fields</legend>
    <p class="legend-caption">Information about the series in which this event occurred.</p>
    <%= display_field([:event_series], {:multiple=>false, :required=>false}) %>
    <%= display_field([:event_place], {:multiple=>false, :required=>false}) %>
    <%= display_field([:event_date], {:multiple=>false, :required=>false}) %>
  </fieldset>

  <h3>Proceed to next step?</h3>
  <%= radio_button_tag(:wf_step, "titles", :checked=>true) %> No <br/>
  <%= radio_button_tag(:wf_step, "subjects") %> Yes <br/>
  <%= hidden_field_tag(:content_type,"archival_video") %>
  <%= submit_tag("Submit", :name=>"submit") %>
  <%= submit_tag("Save and Finish", :name=>"finish", :class=>"save-submit") unless params[:new_asset] %>

<% end %>





