<tr>
  <td>
    <%= image_tag("rockhall/#{document_type(document).underscore}.png", :size=>"30x30") %>
  </td>
  <td>
    <%= link_to_document(document,
                         :label => blacklight_config.show.heading.to_sym,
                         :counter => (counter + 1 + @response.params[:start].to_i)) %>
  </td>
  <td style="white-space: nowrap">
    <%= DateTime.parse(document.fetch(:system_create_dt,nil)).strftime("%Y-%m-%d") %>
  </td>
  <td style="text-align: center">
    <%= get_review_status_from_solr_doc(document) %>
  </td>
</tr>
