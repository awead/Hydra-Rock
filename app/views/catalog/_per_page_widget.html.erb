<% if show_sort_and_per_page? and !blacklight_config.per_page.blank? %>
  <div id="per_page_dropdown" class="btn-group pull-right">
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
      <%= t(:'blacklight.search.per_page.button_label', :count => current_per_page) %>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <%- blacklight_config.per_page.each do |count| %>
        <li><%= link_to(t(:'blacklight.search.per_page.label', :count => count).html_safe, url_for(params_for_search.merge(:rows => count))) %></li>
      <%- end -%>
    </ul>
  </div>
<% end %>