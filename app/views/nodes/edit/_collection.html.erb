<% document.additional_collection.each_index do |index| %>
  <%= text_field_tag "document_fields[additional_collection][#{index.to_s}]", document.additional_collection[index],
                     :id => ("additional_collection_" + index.to_s), :class=>"edit span3" %>
                 
  <%= link_to 'Remove', node_path(params[:id], "collection", index), :method => :delete, :class => "btn btn-mini btn-danger" %>
  <br/>
<% end %>