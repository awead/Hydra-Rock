<%= render :partial=>'/flash_msg' %>
<%= form_tag node_path(params[:id], "event"), :id => "add_event", :class => "form-inline ajax_form", :method => :post do %>
  <div class="modal-header">
    <button type="button" class="close refresh_events" id="close_modal" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Add event</h3>
  </div>
  <div class="modal-body">
    <%= select_tag "event_type",
        options_for_select({ 
          "Event Series" => "series",
          "Event Place"  => "place",
          "Event Date"   => "date",
        })
    %>
    <%= text_field_tag "event_value" %>
    <%= submit_tag "Add", :id => "add_event_button" %>
  </div>
<% end %>